{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "isBackground": true,
            "label": "npm: watch",
            "presentation": {
                "group": "watchers"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc-watch",
            "options": {
                "env": {
                    "PATH": "<your_node_path_here>:${env:PATH}"
                }
            }
        }
    ]
}
